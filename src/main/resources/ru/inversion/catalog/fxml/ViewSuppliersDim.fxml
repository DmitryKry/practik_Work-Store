<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import ru.inversion.fx.form.controls.JInvTable?>
<?import ru.inversion.fx.form.controls.JInvTableColumn?>
<?import ru.inversion.fx.form.controls.JInvToolBar?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.65" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="ru.inversion.catalog.ViewSuppliersDimController">
    
    <!-- Фиксированная верхняя панель -->
    <top>
        <VBox spacing="5" style="-fx-padding: 5;">
            <!-- Панель кнопок -->
            <HBox style="-fx-padding: 5;">
                <children>
                    <Button mnemonicParsing="false" onAction="#load_store" text="Магазины" 
                            prefWidth="100"/>
                    <Button mnemonicParsing="false" onAction="#load_suppliers" text="Поставщики" 
                            prefWidth="100"/>
                    <Button mnemonicParsing="false" onAction="#load_product" text="Товары" 
                            prefWidth="100"/>
                    <Button mnemonicParsing="false" onAction="#load_category" 
                            text="Категории" prefWidth="120"/>
                </children>
            </HBox>
            
            <!-- Фиксированный тулбар -->
            <JInvToolBar fx:id="toolBar"/>
        </VBox>
    </top>

    <!-- Основное содержимое -->
    <center>
        <HBox spacing="10" style="-fx-padding: 5;">
            <!-- Таблица поставщиков (растягивается) -->
            <JInvTable fx:id="SUPPLIERS_DIM" tableMenuButtonVisible="true" HBox.hgrow="ALWAYS">
                <columns>
                    <JInvTableColumn fx:id="FIRST_NAME" fieldName="FIRST_NAME" 
                                    prefWidth="150" text="%FIRST_NAME"/>
                    <JInvTableColumn fx:id="LAST_NAME" fieldName="LAST_NAME" 
                                    prefWidth="150" text="%LAST_NAME"/>
                    <JInvTableColumn fx:id="PATRONYMIC" fieldName="PATRONYMIC" 
                                    prefWidth="150" text="%PATRONYMIC"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </JInvTable>
            
            <!-- Правая панель с контактной информацией -->
            <VBox alignment="TOP_CENTER" prefWidth="250" spacing="10" 
                  style="-fx-padding: 20;" HBox.hgrow="NEVER">
                <children>
                    <Label text="EMAIL" textAlignment="CENTER"/>
                    <TextField fx:id="EMAILField" prefWidth="200"/>
                    
                    <Label text="Телефон" textAlignment="CENTER"/>
                    <TextField fx:id="PhoneField" prefWidth="200"/>
                </children>
            </VBox>
        </HBox>
    </center>
</BorderPane>
