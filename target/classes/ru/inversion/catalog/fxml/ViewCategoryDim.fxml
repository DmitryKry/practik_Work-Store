<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import ru.inversion.fx.form.controls.JInvTable?>
<?import ru.inversion.fx.form.controls.JInvTableColumn?>
<?import ru.inversion.fx.form.controls.JInvToolBar?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.65" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="ru.inversion.catalog.ViewCategoryDimController" 
            fx:id="rootPane">
    
    <!-- Верхняя часть с кнопками и тулбаром -->
    <top>
        <VBox spacing="5">
            <!-- Панель кнопок -->
            <HBox>
                <children>
                    <Button mnemonicParsing="false" onAction="#load_store" text="Магазины" 
                            prefWidth="100"/>
                    <Button mnemonicParsing="false" onAction="#load_suppliers" text="Поставщики" 
                            prefWidth="100"/>
                    <Button mnemonicParsing="false" onAction="#load_product" text="Товары" 
                            prefWidth="100"/>
                    <Button mnemonicParsing="false" onAction="#load_category" 
                            text="Категории" prefWidth="120"/>
                </children>
            </HBox>
            
            <!-- Фиксированный тулбар -->
            <JInvToolBar fx:id="toolBar"/>
        </VBox>
    </top>
    
    <!-- Центральная часть с таблицей -->
    <center>
        <JInvTable fx:id="CATEGORY_DIM" tableMenuButtonVisible="true">
            <columns>
                <JInvTableColumn fx:id="CATEGORY_NAME" fieldName="CATEGORY_NAME" 
                                prefWidth="773.0" text="%CATEGORY_NAME"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0"/>
            </BorderPane.margin>
        </JInvTable>
    </center>
</BorderPane>